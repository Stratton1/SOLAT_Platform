# SOLAT Platform - Secrets Configuration Template
# Copy this file to secrets.toml and fill in your credentials
# IMPORTANT: Never commit secrets.toml to version control

# ============================================================
# IG MARKETS (UK Spread Betting - Tax Free)
# ============================================================
# Create account at: https://www.ig.com/uk
# Get API key from: My IG > Settings > API

[ig]
username = "YOUR_IG_USERNAME"
password = "YOUR_IG_PASSWORD"
api_key = "YOUR_IG_API_KEY"
acc_type = "DEMO"  # "DEMO" for paper trading, "LIVE" for real money

# ============================================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================================
# For trade alerts via email

[smtp]
host = "smtp.gmail.com"
port = 587
username = "your_email@gmail.com"
password = "your_app_password"
recipient = "alerts@yourdomain.com"

# ============================================================
# EXCHANGE APIs (Optional - for future use)
# ============================================================

[binance]
api_key = ""
secret = ""

[alpaca]
api_key = ""
secret = ""
